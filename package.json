  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2"
  },
  "devDependencies": {
    "gh-pages": "^6.1.1",
    "nodemon": "^3.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bigilbro123/twitter-clone.git"
  },
  "engines": {
    "node": ">=14.0.0"
  }
